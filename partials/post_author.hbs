{{! Everything inside the #author tags pulls data from the author }}
{{#primary_author}}
    {{#if profile_image}}
        <figure class="author-image">
            <a class="img" href="{{url}}" style="background-image: url({{img_url profile_image}})"><span class="hidden">{{name}}'s Picture</span></a>
        </figure>
    {{/if}}
{{/primary_author}}
<figure class="author-info">
    <section class="author-info-title">
        <span class="pull-right">{{t "Publish At"}}：<time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="YYYY-MM-DD"}}</time></span>
        {{#primary_author}}
        <span>{{t "Author"}}：{{name}}</span>
    </section>
    <section class="author-info-content">
        <section class="author-info-social">
            {{!-- {{#if website}}<a href="{{website}}" class="author-info-social-website">我的站点</a>{{/if}} --}}
            {{!-- <a href="{{url}}" class="author-info-social-feature">我的专栏</a> --}}
            <div align="center">
                <img style="width: 200px; max-width: 100%;" class="center-block" src="https://i.loli.net/2019/04/14/5cb21c2fad2a9.jpg" alt="专注于计算机科学与技术、独立思考、阅读分享">
                <h5>欢迎关注微信号[QuanTalk]，专注于计算机科学与技术、独立思考、阅读分享</h5>

                <a href="https://github.com/adolphlwq" class="author-info-social-github" target="_blank">{{t "GitHub"}}</a>
                <a href="http://weibo.com/adolphlwq" class="author-info-social-weibo" target="_blank">{{t "Weibo"}}</a>
                <a href="https://segmentfault.com/u/adolphlwq" class="author-info-social-sf" target="_blank">SegmentFault</a>
                <a href="https://juejin.im/user/5cab6b395188251b21655296/posts" class="author-info-social-jj" target="_blank">掘金专栏</a>
            </div>
        </section>
        {{#if bio}}
        <div align="center">
            <span class="author-info-bio">{{bio}}</span>
        </div>
        {{else}}
        <div align="center">
            <p class="author-info-bio-placeholder">{{t "Read"}} <a href="{{url}}">{{t "more posts"}}</a> {{t "by this author"}}</p>
        </div>
        {{/if}}

        {{/primary_author}}
    </section>
</figure>
